<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5E5E54"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/countDownBtn"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:text="@string/countDownBtn"
            android:textSize="@dimen/text_size4"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/counterText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/countUpBtn" />

        <TextView
            android:id="@+id/LabelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Counter"
            android:textSize="@dimen/textSize2"
            app:layout_constraintBottom_toTopOf="@+id/toastBtn"
            app:layout_constraintEnd_toStartOf="@+id/counterText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/toastBtn"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:text="@string/toastBtn"
            android:textSize="@dimen/text_size4"
            app:layout_constraintBottom_toTopOf="@+id/countUpBtn"
            app:layout_constraintEnd_toStartOf="@+id/counterText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LabelText" />

        <Button
            android:id="@+id/countUpBtn"
            android:layout_width="225dp"
            android:layout_height="70dp"
            android:text="@string/countUpBtn"
            android:textSize="@dimen/text_size4"
            app:layout_constraintBottom_toTopOf="@+id/countDownBtn"
            app:layout_constraintEnd_toStartOf="@+id/counterText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toastBtn" />

        <TextView
            android:id="@+id/counterText"
            android:layout_width="383dp"
            android:layout_height="305dp"
            android:background="@color/teal_700"
            android:textAlignment="center"
            android:textSize="@dimen/text_size3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.853"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>